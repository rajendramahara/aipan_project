<div class="w-full h-full flex flex-col items-center justify-center p-8">
  <h1 class="text-xl font-bold text-blue-500">Sign Up</h1>
  <%= form_with model: @user, url: registration_path, class: "p-4 shadow border rounded-md mt-8 flex flex-col space-y-4" do |form| %>
    <div class="w-full">
      <%= form.label :email, class: "block font-medium text-gray-700" %>
      <%= form.text_field :email, class: "p-2 border rounded-md text-black" %>
    </div>
    <div class="w-full">
      <%= form.label :password, class: "block font-medium text-gray-700" %>
      <%= form.text_field :password, class: "p-2 border rounded-md text-black" %>
    </div>
    <%= form.submit "Sign up", class: "rounded-md bg-blue-500 text-white text-medium p-2" %>
  <% end %>
</div>