<div class="w-full h-full overflow-y-auto p-4">
  <div class="flex items-center justify-between w-full">
    <h2 class="text-lg text-green-500 font-medium">Departments</h2>
    <%= link_to 'Add Department', new_organization_department_path, class: 'btn-primary' %>
  </div>
  <% if @departments.count == 0 %>
    <div class="p-2 h-96 border-2 border-red-200 shadow rounded mt-2 items-center justify-center">
      <p>No data found!</p>
    </div>
  <% else %>
    <div class="flex flex-col space-y-2 mt-2">
      <% @departments.each do |department| %>
        <%= render department %>
      <% end %>
    </div>
  <% end %>
</div>
