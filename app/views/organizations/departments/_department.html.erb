<div class="p-2 border-2 border-green-200 shadow rounded flex justify-between">
  <%= department.name %>
  <div class="w-full flex items-center justify-end gap-2">
    <%= link_to "show", organization_department_path(@organization, department), class: 'btn-primary' %>
    <%= link_to 'Edit', edit_organization_department_path(@organization, department), class: 'btn-primary' %>
    <%= button_to 'Delete', organization_department_path(@organization, department), method: :delete, class: 'rounded-md px-4 py-1 bg-red-500 text-white text-base font-medium' %>
  </div>
</div>