<div class="p-4 flex flex-col space-y-4">
  <div class="border border-green-200 p-4 flex flex-col space-y-4 rounded-md">
    <h1>Department Employees</h1>
    <% unless @department.users.count != 0 %>
      <div class="w-full h-56 flex items-center justify-center">
        <p>Department emplyees not found!</p>
      </div>
    <% end %>
    <div class="flex flex-col space-y-2">
      <% @department.users.each do |user| %>
        <div class="p-2 border rounded-md flex items-center justify-between">
          <span><%= user&.profile&.full_name || user.email %></span>
          <%= form_with url: update_department_user_organization_departments_path(id: @department, organization_id: @organization, user_id: user.id), method: :patch, class: "p-0 m-0" do |form| %>
            <%= form.submit "remove", class: "secondary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="border border-green-200 p-4 flex flex-col space-y-4 rounded-md">
    <h1>organization Employees</h1>
    <% unless @organization_employees.count != 0 %>
      <div class="w-full h-56 flex items-center justify-center">
        <p>organization employees not found!</p>
      </div>
    <% end %>
    <div class="flex flex-col space-y-2">
      <% @organization_employees.each do |user| %>
        <div class="p-2 border rounded-md flex items-center justify-between">
          <span><%= user&.profile&.full_name || user.email %></span>
          <%= form_with url: update_department_user_organization_departments_path(id: @department, organization_id: @organization, user_id: user.id), method: :patch, class: "p-0 m-0" do |form| %>
            <%= form.submit "ADD", class: "btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>