<div class="w-full h-full overflow-y-auto p-4">
  <div class="flex items-center justify-between w-full">
    <h2 class="text-lg text-green-500 font-medium">Announcements</h2>
    <%= link_to 'Add Announcement', new_organization_announcement_path, class: 'btn-primary' %>
  </div>
  <% if @announcements.count == 0 %>
    <div class="p-2 h-96 border-2 border-red-200 shadow rounded mt-2 items-center justify-center">
      <p>No data found!</p>
    </div>
  <% else %>
    <div class="flex flex-col space-y-2 mt-2">
      <% @announcements.each do |announcement| %>
        <%= render announcement %>
      <% end %>
    </div>
  <% end %>
</div>
