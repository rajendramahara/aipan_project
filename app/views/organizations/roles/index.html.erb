<div class="w-full h-full overflow-y-auto p-4">
  <div class="flex items-center justify-between w-full">
    <h2 class="text-lg text-green-500 font-medium">Members</h2>
    <%= link_to 'Add role', new_organization_role_path, class: 'btn-primary' %>
  </div>
  <div class="relative overflow-x-auto mt-2">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
            User name
          </th>
          <th scope="col" class="px-6 py-3">
            Permissions
          </th>
          <th scope="col" class="px-6 py-3">
            Action
          </th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each do |role| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200">
            <td class="px-6 py-4">
              <%= role.name %>
            </td>
            <td class="px-6 py-4">
              <% role.permissions.each do |permission| %>
                <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-sm"><%= "#{permission.module_id}" %></span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <div class="flex gap-2">
                <%= link_to 'Edit', edit_organization_role_path(@organization, role) %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
